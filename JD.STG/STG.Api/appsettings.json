{
  "ConnectionStrings": {
    "Default": "Data Source=stg.db;Cache=Shared"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "AI": {
    "Optimizer": "OrTools", // o "None"
    "Explainer": "None", //OpenAI o "None"
    "OpenAI": {
      "Endpoint": "https://.../",
      "ApiKey": "KeyVault:OpenAIKey",
      "Model": "gpt-4o-mini",
      "MaxTokens": 400
    },
    "Limits": {
      "MaxOptimizeSeconds": 20,
      "MaxCandidates": 5000
    }
  },
  "Limits": {
    "MaxPeriodsPerDayTeacher": 6,
    "MaxPeriodsPerDayGroup": 8,
    "MaxConsecutiveSameSubject": 2
  }
}